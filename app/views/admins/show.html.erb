
<h1><center>Admin - Information</center></h1>
<br>
  <div class="table-responsive">
    <table class="table align-middle mb-0 bg-white">
      <thead class="bg-light">
        <tr>
          <th>Name</th>
          <th>Gender</th>
          <th>Date Of Birth</th>          
          <th>Adderss</th>
          <th>Contact</th>
          <th>Edit Details </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>          
            <p class="fw-bold mb-1"><%= @admin.name %></p>    
          </td>
          <td>
            <p class="fw-normal mb-1"><%= @admin.gender %></p>            
          </td>
          <td>
            <p class="fw-normal mb-1"><%= @admin.date_of_birth %></p>            
          </td>
          <td>
            <p class="fw-normal mb-1"><%= @admin.address%></p>            
          </td>
          <td>
            <p class="fw-normal mb-1"><%= @admin.contact_number%></p>            
          </td>
          <td>
            <button type="button" class="btn btn-link btn-sm btn-rounded"><%= link_to 'Edit', edit_admin_path %></button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
