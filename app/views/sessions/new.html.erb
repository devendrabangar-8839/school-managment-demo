<section class="vh-100" style="background-color: #9A616D;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://previews.123rf.com/images/anthonycz/anthonycz1710/anthonycz171000030/88338912-school-icon-.jpg"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <%= form_with url: session_path do |f| %>
                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login into your account</h5>
                  <div class="form-outline mb-4">
                    <%= f.label :email, class: "form-label" %>
                    <%= f.email_field :email, class: "form-control form-control-lg" %>
                  </div>
                  <div class="form-outline mb-4">
                    <%= f.label :password, class: "form-label" %>
                    <%= f.password_field :password, class: "form-control form-control-lg" %>
                  </div>
                  <div class="d-flex">
                    <%= f.submit 'Log In', class: "btn btn-success btn-lg btn-block w-100 mx-4" %>
                    <%= link_to 'Sign Up', new_user_path, class: "btn btn-primary btn-lg btn-block w-100 mx-4" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>