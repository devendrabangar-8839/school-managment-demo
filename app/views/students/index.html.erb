<div class="container">
  <h1><center>Students - Information</center></h1>
  <div class="table-responsive">
    <table class="table align-middle mb-0 bg-white">
      <thead class="bg-light">
        <tr>          
          <th>ID</th>
          <th>Students Name</th>
          <th>View Details </th>
         
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.id %></td>
            <td><%= student.name %></td>
            <td><a href="/students/<%= student.id %> ">View</a></td>
            
          </tr>
        <% end -%>
      </tbody>
    </table>
  </div>
</div>
