
<h1><center>Students - Information</center></h1>
<br>
  <div class="table-responsive">
    <table class="table align-middle mb-0 bg-white">
      <thead class="bg-light">
        <tr>
          <th>Name</th>
          <th>Father Name</th>
          <th>Gender</th>
          <th>Date Of Birth</th>
          <th>Roll No.</th>
          <th>Adderss</th>
          <th>Contact</th>
          <th>Edit Details </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>          
            <p class="fw-bold mb-1"><%= @student.name %></p>    
          </td>
          <td>
            <p class="fw-normal mb-1"><%= @student.father_name %></p>            
          </td>
          <td>
            <p class="fw-normal mb-1"><%= @student.gender %></p>            
          </td>
          <td>
            <p class="fw-normal mb-1"><%= @student.date_of_birth %></p>            
          </td>
          <td>
            <p class="fw-normal mb-1"><%= @student.roll_no%></p>            
          </td>
          
          <td>
            <button type="button" class="btn btn-link btn-sm btn-rounded"><%= link_to 'Edit', edit_student_path %></button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
